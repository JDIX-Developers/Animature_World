<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".BattleSceneActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/Margin10" >

        <TextView
            android:id="@+id/enemyAnimatureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/Margin15"
            android:text="Charizard" />

        <TextView
            android:id="@+id/enemyAnimatureLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/Margin15"
            android:text="Nvl: 45" />

        <ProgressBar
            android:id="@+id/enemyAnimatureLife"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:padding="@dimen/Margin15" >

        <ImageView
            android:id="@+id/enemyAnimatureImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/oak_image" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/AnimatureImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/Margin15"
            android:src="@drawable/oak_image" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/Margin5"
        android:paddingLeft="@dimen/Margin10"
        android:paddingRight="@dimen/Margin10"
        android:paddingTop="@dimen/Margin10" >

        <TextView
            android:id="@+id/AnimatureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/Margin15"
            android:text="Blastoise" />

        <TextView
            android:id="@+id/AnimatureLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/Margin15"
            android:text="Nvl: 45" />

        <ProgressBar
            android:id="@+id/AnimatureLife"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/Exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Margin10"
            android:layout_weight="0"
            android:text="TextView" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginLeft="@dimen/Margin10"
            android:layout_marginRight="@dimen/Margin10"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>